{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": "./tsconfig.json"
    },
    "overrides": [
        {
            "files": ["src/**/*.ts", "vite.config.ts"],
            "plugins": [
                "@typescript-eslint",
                "typescript-enum",
                "no-relative-import-paths",
                "eslint-plugin-tsdoc",
                "eslint-plugin-import",
                "only-error"
            ],
            "extends": [
                "eslint:recommended",
                "plugin:@typescript-eslint/strict-type-checked",
                "prettier",
                "plugin:prettier/recommended"
            ],
            "rules": {
                "import/order": [
                    "error",
                    {
                        "groups": [
                            "builtin",
                            "external",
                            "internal",
                            "object",
                            "type"
                        ],
                        "alphabetize": {
                            "order": "asc",
                            "caseInsensitive": false
                        },
                        "newlines-between": "always",
                        "sortTypesGroup": true,
                        "pathGroups": [
                            {
                                // Minimatch pattern used to match against specifiers
                                "pattern": "@/**",
                                // The predefined group this PathGroup is defined in relation to
                                "group": "internal",
                                // How matching imports will be positioned relative to "group"
                                "position": "after"
                            }
                        ]
                    }
                ],
                "import/no-default-export": "error",
                "import/first": "error",
                "import/no-named-default": "error",
                "import/no-useless-path-segments": [
                    "error",
                    {
                        "noUselessIndex": true
                    }
                ],
                "import/consistent-type-specifier-style": [
                    "error",
                    "prefer-inline"
                ],
                "import/no-duplicates": [
                    "error",
                    {
                        "prefer-inline": true
                    }
                ],
                "@typescript-eslint/array-type": [
                    "error",
                    {
                        "default": "generic",
                        "readonly": "generic"
                    }
                ],
                "@typescript-eslint/consistent-generic-constructors": "error",
                "@typescript-eslint/consistent-indexed-object-style": [
                    "error",
                    "record"
                ],
                "@typescript-eslint/consistent-type-assertions": "error",
                "@typescript-eslint/consistent-type-exports": [
                    "error",
                    {
                        "fixMixedExportsWithInlineTypeSpecifier": true
                    }
                ],
                "@typescript-eslint/consistent-type-imports": [
                    "error",
                    {
                        "disallowTypeAnnotations": true,
                        "fixStyle": "inline-type-imports",
                        "prefer": "type-imports"
                    }
                ],
                "@typescript-eslint/strict-boolean-expressions": "error",
                "@typescript-eslint/no-explicit-any": "off",
                "@typescript-eslint/explicit-module-boundary-types": "error",
                "@typescript-eslint/no-unnecessary-type-parameters": "off",
                "@typescript-eslint/no-unused-vars": [
                    "error",
                    {
                        "args": "all",
                        "argsIgnorePattern": "^_",
                        "caughtErrors": "all",
                        "caughtErrorsIgnorePattern": "^_",
                        "destructuredArrayIgnorePattern": "^_",
                        "varsIgnorePattern": "^_"
                    }
                ],
                "typescript-enum/no-const-enum": "off",
                "typescript-enum/no-enum": "off",
                "no-relative-import-paths/no-relative-import-paths": [
                    "error",
                    {
                        "rootDir": "src",
                        "prefix": "@"
                    }
                ]
            }
        },
        {
            "files": ["*.config.ts","*.config.mts","*.config.js", "*.config.cjs","*.config.mjs"],
            "rules": {
                "import/no-default-export": "off"
            }
        },
        {
            "files": ["src/**/*.test-suite.ts", "src/**/*.test.ts"],
            "plugins": ["vitest"],
            "extends": ["plugin:@vitest/legacy-recommended"],
            "rules": {
                "@vitest/no-disabled-tests": "error",
                "@vitest/no-focused-tests": "error",
                "@vitest/no-commented-out-tests": "error"
            }
        }
    ]
}
